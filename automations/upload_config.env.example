# ================================================================
# Upload Script Configuration File
# Copy this file to upload_config.env and fill in your credentials
# ================================================================

# Source directory for media files
UPLOAD_SOURCE_DIR="./to_upload"

# Maximum concurrent upload jobs
UPLOAD_MAX_CONCURRENT=4

# Log directory
UPLOAD_LOG_DIR="./upload_logs"

# YouTube Configuration
YOUTUBE_ACCESS_TOKEN="ya29.YOUR_ACCESS_TOKEN_HERE"
YOUTUBE_CHANNEL_ID="UCxxxxxxxxxxxx"
YOUTUBE_PRIVACY="public"  # Options: public, unlisted, private

# Telegram Configuration
TELEGRAM_BOT_TOKEN="123456:ABCDEF-your-telegram-bot-token"
TELEGRAM_CHAT_ID="@your_channel_or_chat_id_or_numeric"

# Instagram Graph API Configuration
IG_ACCESS_TOKEN="IGQVJ...YOUR_TOKEN_HERE"
IG_INSTAGRAM_ACCOUNT_ID="178414xxxxx"
IG_APP_SECRET="your_app_secret_here"

# Discord Configuration
DISCORD_WEBHOOK_URL="https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN"

# X (Twitter) Configuration (OAuth 1.0a)
X_CONSUMER_KEY="your_consumer_key"
X_CONSUMER_SECRET="your_consumer_secret"
X_ACCESS_TOKEN="your_access_token"
X_ACCESS_TOKEN_SECRET="your_access_token_secret"

# Reddit Configuration
REDDIT_ACCESS_TOKEN="bearer_your_token_here"
REDDIT_SUBREDDIT="yoursubreddit"

